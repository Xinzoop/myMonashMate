<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
<!--         <item name="android:actionBarStyle">@style/MyActionBar</item> -->
        <item name="android:textViewStyle">@style/MonashText</item>
        <item name="android:buttonStyle">@style/MonashButton</item>
        <item name="android:editTextStyle">@style/MonashEdit</item>
    </style>
    
    <style name="MyActionBar" parent="@android:style/Widget.ActionBar">
        <item name="android:background">#F5F5F5</item>
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>
    
    <style name="PrivacySwitchStyle">
        <item name="android:textOn">Public</item>
        <item name="android:textOff">Private</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">#FFFFFF</item>
        </style>

    <style name="MonashText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="MonashEdit" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/round_editview</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
    </style>
    <style name="MonashButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/monash_button_selector</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">2dp</item>
    </style>
    <style name="windowBackground">
        <item name="android:background">#4099FF</item>
    </style>
</resources>
